@charset "UTF-8";

body{
	min-width:1280px;
	margin:0;
	padding:0;
}

.navigation{
	height:57px;
	line-height:57px;
	padding-right:44px;
}

.navigation #book{
	margin-left:59px;
	margin-right:10px;
	vertical-align:middle;
}

.navigation span{
	font:21px "SimHei";
	vertical-align:middle;
}

.navigation a{
	font:14px "Microsoft YaHei";
	float:right;
	height:55px;
	margin:0 22px;
	line-height:57px;
	color:#5a5b5b;
}

.navigation #login img{
	margin-right:4px;
	vertical-align:middle;
}

.navigation #login{
	color:#e74f4d;
}

.navigation #toppage{
	color:#e74f4d;
	border-bottom:4px solid #e74f4d;
	width:65px;
	text-align:center;
}


.section1{
	height:690px;
	width:100%;
	background-image:url(source/task7/img1.png);
	background-size:100%;
	position:relative;
	overflow:hidden;
}

.section1 p,h2,#start{
	margin-left:10%;
	color:#fff;
}

.section1 h2{
	margin-top:230px;
	margin-bottom:0;
	font:60px "Microsoft YaHei";
	position:relative;
	z-index:2;
}

.section1 p{
	font:21px "Microsoft YaHei";
	position:relative;
	z-index:2;
}

.section1 #start{
	font:30px "Microsoft YaHei";
	background-color:#e74f4d;
	width:331px;
	height:64px;
	text-align:center;
	line-height:64px;
	margin-top:64px;
	z-index:2;
	position:relative;
}

.section1 .mask{
	background-color:#000;
	top:0;
	bottom:0;
	left:0;
	right:0;
	opacity:0.2;
	position:absolute;
}


.section2{
	height:254px;
}

.section2 div{
	display:inline-block;
	box-sizing:border-box;
	height:50px;
	width:25%;
	border-left:1px solid #888;
	border-right:1px solid #888;
	margin-top:133px;
	padding:0 80px;
	font:14px/18px "SimHei";
	color:#888;
	text-align:center;
	position:relative;
}

.section2 div img{
	position:absolute;
	bottom:100px;
	left:0;
	right:0;
	margin-left:auto;
	margin-right:auto;
}

.section3{
	height:361px;
	width:3000px;
	background-color:#eee;
	text-align:center;
	font:54px/56px "SimHei";
	display:table-cell;
	vertical-align:middle;
}

.section3 span{
	opacity:0.5;
}

.section3 img{
	margin-bottom:30px;
}

.section4{
	height:340px;
	background-image:url(source/task7/kanditu.png);
	background-size:100%;
	background-position:bottom;
	color:#fff;
	text-align:center;
}

.section4 h3{
	font:21px/42px "Microsoft YaHei";
	margin:0;
	padding-top:43px;
	padding-bottom:0;
}

.section4 .line{
	width:31px;
	border:1px solid #fff;
	margin:auto;
}

.section4 p{
	font:12px/32px "Microsoft YaHei";
}

.section4 select{
	width:236px;
	height:35px;
	margin:23px;
	color: #b5b7b7;
	border:none;
}

.section4 select::-ms-expand { display: none; }

.section4 input{
	width:236px;
	height:35px;
	margin:23px;
	font:14px "Microsoft YaHei";
	color:white;
	padding:0;
	background-color:#be4e48;
	border:none;
}


.section5{
	height:631px;
	background:#eee;
	text-align:center;
}

.section5 #ver{
	font-size:0;
	display:inline-block;
	height:631px;
	vertical-align:middle;
}

.section5 div{
	display:inline-block;
	width:218px;
	margin:19px;
	text-align:center;
	vertical-align:middle;
}

.section5 div img{
	border:1px solid #ddd;
	padding:14px 7px;
	margin:7px;
}

.section5 div span{
	font:12px/12px "SimHei";
	color:#888;
}

.section5 div .title1{
	font:14px/28px "Microsoft YaHei";
	color:#555;
}

.section5 div .title2{
	font:24px/30px "Microsoft YaHei";
	color:#555;
	white-space:pre;
}

.section6{
	display:table;
	width:100%;
	border-collapse:collapse;
}

.section6 .row1{
	display:table-row;
}

.section6 .row1 .left{
	display:table-cell;
	width:851px;
	background:url(source/task7/img2.png) bottom left;
	height:567px;
	color:#fff;
	vertical-align:middle;
	text-align:center;
}

.section6 .row1 .left #newworld{
	font:50px "Microsoft YaHei";
}

.section6 .row1 .left #time{
	font:158px "Microsoft YaHei";
}

.section6 .row1 .left #city,#date{
	font:22px "Microsoft YaHei";
}

.section6 .row1 .right{
	display:table-cell;
	padding:70px;
	color:#aaa;
	font-size:12px;
	line-height:30px;
	font-family:"Microsoft YaHei";
	vertical-align:middle;
	text-align:center;
	position:relative;
}

.section6 .row1 .right p{
	text-align:left;
}

.section6 .row1 .right .more{
	color:#e25c60;
	box-sizing:border-box;
	width:107px;
	height:35px;
	border:1px solid #e25c60;
	margin:30px auto 30px auto;
}

.section6 .row1 .right .circle1{
	width:12px;
	height:12px;
	border:1px solid #777;
	border-radius:12px;
	display:inline-block;
	margin:0 12px;
}

.section6 .row1 .right .circle1:hover{
	background:#777;
}

.section6 .row1 .right .tri{
	border-right:26px solid white;
	border-top:15px solid transparent;
	border-bottom:15px solid transparent;
	box-sizing:border-box;
	position:absolute;
	top:283px;
	left:-26px;
	transform:translateY(-50%);
}


.section7{
	display:table;
	width:100%;
}

.section7 .row2{
	display:table-row;
}

.section7 .row2 .col1{
	display:table-cell;
	width:426px;
	height:521px;
	vertical-align:middle;
	text-align:center;
	font:21px/31px "SimHei";
	color:#fff;
	background:#e74f4d;
}

.section7 .row2 .col1 .line2{
	width:31px;
	border:1px solid #fff;
	margin:20px auto;
}

.section7 .row2 .col1 .more2{
	width:170px;
	height:44px;
	border:1px solid #fff;
	line-height:44px;
	margin:auto;
}

.section7 .row2 .col2{
	display:table-cell;
	width:426px;
	vertical-align:middle;
	text-align:center;
	font:21px/31px "SimHei";
	color:#000;
	background:#fff;
}

.section7 .row2 .col2 .line3{
	width:31px;
	border:1px solid #777;
	margin:20px auto;
}

.section7 .row2 .col2 .more3{
	width:170px;
	height:44px;
	color:#e74f4d;
	border:1px solid #e74f4d;
	line-height:44px;
	margin:auto;
}

.section7 .row2 .col3{
	display:table-cell;
	background-image:url(source/task7/img3.png);
}


.section8{
	height:750px;
	width:100%;
}

.section8 .topcontent{
	text-align:center;
	padding:100px;
	font:12px/18px "Microsoft YaHei";
	color:#aaa;
}

.section8 .topcontent span{
	font:21px/61px "SimHei";
	color:black;
}

.section8 .left2{
	width:300px;
	margin:0 70px 0 135px;
	float:left;
}

.section8 .left2 div{
	font:12px/21px "Microsoft YaHei";
	margin-bottom:50px;
}

.section8 .left2 div span{
	font:12px/21px "Microsoft YaHei";
}

.section8 .left2 div h3{
	font:14px "SimHei";
	padding-bottom:7px;
}

.section8 .left2 div:after{
	content:"more";
	display:block;
	font:12px/21px "Microsoft YaHei";
	text-align:right;
}

.section8 .right2{
	margin:0 130px 0 490px;
}

.section8 .right2 form input{
	width:40%;
	height:30px;
	margin:10px;
	padding:5px 15px;
	background:#eee;
	border:0;
	font:12px "Microsoft YaHei";
	color:#333;
}

.section8 .right2 form textarea{
	width:88%;
	height:150px;
	margin:10px;
	padding:15px;
	background:#eee;
	border:0;
	font:12px "Microsoft YaHei";
	color:#333;
	overflow:hidden;
}

.section8 .right2 form .button{
	width:93%;
	height:40px;
	margin:10px;
	background:#eee;
	border:0;
	font:14px "Microsoft YaHei";
	color:#333;
}


.section9{
	height:360px;
	background:#32363e;
}

.section9 div{
	text-align:center;
	position:relative;
	top:50%;
	transform:translateY(-50%);
}

.section9 div h2{
	font:21px/48px "SimHei";
	color:#fff;
	margin:0;
	padding:0;
}

.section9 div p{
	font:12px/18px "SimSun";
	color:#fff;
	margin:0;
	padding:0;
}

.section9 div form{
	margin:20px;
	font-size:0px;
}

.section9 div form #email{
	width:410px;
	height:40px;
	font:14px "Microsoft YaHei";
	color:#aaa;
	border:0;
	padding:0 10px;
	vertical-align:middle;
}

.section9 div form #tijiao{
	width:80px;
	height:40px;
	font:15px "Microsoft YaHei";
	color:#fff;
	background:#6f7178;
	border:0;
	vertical-align:middle;
}

.section9 div img{
	margin:11px;
}


footer{
	background:#2f2f38;
	height:58px;
	position:relative;
	font:12px "SimSun";
	color:#fff;
	text-align:center;
	padding:30px;
}